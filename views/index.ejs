<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Task Manager</title>
</head>
<body>
    <!-- Create a form that accepts strings as task and name the button -->
    <form action="/addTask" method="POST">
        <input type="text" name="task" placeholder="Enter a task">
        <button type="submit">Add Task</button>
    </form>
    <ul>
        <% tasks.forEach(task => { %>
            <li>
                <%= task.text %>
                <button type="submit">
                    <a href="/edit/<%= task._id %>">Edit Task</a>
                </button>
                <button type="submit">
                    <a href="/delete/<%= task._id %>">Delete</a>
                </button>
            </li>
        <% }); %>
    </ul>
</body>
</html>